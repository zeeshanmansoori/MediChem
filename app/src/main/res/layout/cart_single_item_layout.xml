<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/medicine_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/number_picker"
        android:src="@drawable/medicine"
        android:layout_margin="5dp"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="this is product desc and deltails"
        android:lines="2"
        app:layout_constraintStart_toEndOf="@id/medicine_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/medicine_prize"
        />
    <TextView
        android:id="@+id/medicine_prize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="345Rs"
        android:lines="2"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/medicine_name"
        app:layout_constraintStart_toEndOf="@id/medicine_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/delete_element_fC"
        />

    <com.travijuu.numberpicker.library.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="130dp"
        android:layout_height="40dp"
        app:min = "0"
        app:max = "10"
        app:unit="1"
        app:value="-5"
        app:focusable="false"
        app:custom_layout="@layout/number_picker_layout"
        app:layout_constraintTop_toBottomOf="@id/medicine_prize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_element_fC"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_element_fC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintStart_toEndOf="@id/number_picker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medicine_prize"
        />



</androidx.constraintlayout.widget.ConstraintLayout>