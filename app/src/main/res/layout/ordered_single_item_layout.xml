<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table_bg">

    <ImageView
        android:id="@+id/medicine_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:src="@drawable/medicine"
        app:layout_constraintBottom_toTopOf="@+id/payment_optn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/data_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@id/payment_optn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/medicine_image"
        app:layout_constraintTop_toTopOf="parent"

        >

        <TextView
            android:id="@+id/medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_textview"
            android:maxLines="2"
            android:text="thl is medicine name and des" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicine_name"
            android:layout_marginLeft="@dimen/margin_left_textview"
            android:text="Order date" />

        <TextView
            android:id="@+id/ordered_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicine_name"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_left_textview"
            android:text="09Sep-2020" />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date"
            android:layout_marginLeft="@dimen/margin_left_textview"
            android:text="Order Id" />

        <TextView
            android:id="@+id/ordered_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordered_date"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_left_textview"
            android:text="646413131645646" />

        <TextView
            android:id="@+id/order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_id"
            android:layout_marginLeft="@dimen/margin_left_textview"
            android:text="Order Total" />

        <TextView
            android:id="@+id/ordered_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordered_id"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_left_textview"
            android:text="500Rs" />

        <TextView
            android:id="@+id/order_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_total"
            android:layout_marginLeft="@dimen/margin_left_textview"
            android:text="Order Quantity" />

        <TextView
            android:id="@+id/ordered_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordered_total"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_left_textview"
            android:text="5 units" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/payment_optn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment status:" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/payment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Successful" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>